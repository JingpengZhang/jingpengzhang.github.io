---
import MouseEffect from "../components/MouseEffect";
import Navbar from "../components/Navbar.astro";
import WebFooter from "../components/WebFooter.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="记录前端开发、技术笔记与项目实践。" />
    <meta
      name="keywords"
      content="前端开发, JavaScript, TypeScript, React, Vue, Web开发, 编程笔记, 技术博客, 全栈开发, 编程经验, 前端工程化, 技术分享, Node.js, 前端面试, 编程成长"
    />
    <title>👨‍💻 BitPeng</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- <Background client:load /> -->
    <!-- <MouseText /> -->
    <MouseEffect client:load />
    <Navbar />
    <div class="mt-24 xl:mt-32 grow">
      <slot />
    </div>
    <WebFooter />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
